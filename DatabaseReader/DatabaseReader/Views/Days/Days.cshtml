@model IEnumerable<DatabaseReader.Models.Day>

@{
    ViewBag.Title = "Days";
}

<h2>Days</h2>

<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Workout Day
        </th>
        <th>
            On Holiday
        </th>
        <th>
            Total Calories
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsWorkoutDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHoliday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCalories)
            </td>
            <td>                
                @Html.ActionLink("Details", "Details", new { id = item.DateTime.ToString("dd-MM-yyyy") })            
            </td>
        </tr>
    }

</table>

